{
  "name": "webgl-earth-bars",
  "version": "0.0.1",
  "fullName": "Earth dataviz",
  "description": "A rotating WebGL earth with data bars",
  "keywords": [
    "dataviz",
    "data",
    "earth",
    "webgl"
  ],
  "joshfire": {
    "images": {
      "small":"http://i.imgur.com/jWsbZ.png",
      "big":"http://i.imgur.com/jWsbZ.png"
    },
    "devices": [
      {
        "devices": "web",
        "startfile": "app/index.html"
      }
    ],
    "datasources": {
      "main": {
        "title": "Geo data",
        "description": "Must have geotagging",
        "multiple":true
      }
    },
    "options": {
      "schema":{
        "htmlfooter":{
          "type":"string",
          "title":"Footer",
          "description":"This HTML snippet will appear in the bottom right corner"
        }
      },
      "form":[
        "datasources.main",
        {
          "key":"htmlfooter",
          "type":"textarea"
        }
      ]
    }
  }
}